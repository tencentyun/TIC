/* pages/main/main.wxss */
.mainUI {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-image: url(https://main.qcloudimg.com/raw/20db9863af9f7e57a7be64dbac685691.png);
  background-color: #1F2531;
  background-repeat: no-repeat;
  background-size: 60%;
  background-position: center bottom;
}

.tips {
  color: #ffffff;
  font-size: 12px;
  text-align: center;
  padding: 5vw 0 5vw;
}

.guide-box {
  text-align: center;
}

.guide {
  display: inline-block;
  width: 30vw;
  height: 33vw;
  background-color: rgba(0, 0, 0, 0.55);
  text-align: center;
  margin: 1.5px;
  vertical-align: top;
}

.guide-nomore {
  display: inline-block;
  width: 30vw;
  height: 33vw;
  text-align: center;
  margin: 1.5px;
  vertical-align: top;
}

.guide-nomore-bk {
  background-color: rgba(0, 0, 0, 0.3);
}

.guide_icon {
  display: block;
  width: 72rpx;
  height: 72rpx;
  margin: 60rpx auto 0;
}

.guide_label {
  display: block;
  margin-top: 30rpx;
  color: #CFE4FF;
  font-size: 28rpx;
}

.guide_desc {
  display: block;
  margin-top: 2px;
  color: #888;
  font-size: 22rpx;
  white-space: nowrap;
}

.guide_nomore_label {
  margin-top: 36px;
  color: rgba(256, 256, 256, 0.3);
  font-size: 14px;
}

.logo-box {
  position: absolute;
  width: 100vw;
  bottom: 36rpx;
  text-align: center;
}

.logo {
  width: 160rpx;
  height: 44rpx;
}